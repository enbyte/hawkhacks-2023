{
    "manifest_version": 3,
    "name": "Kaleidoscope",
    "description": "Kaleidoscope: view bias of news sites and find articles on the other side of the aisle.",
    "version": "1.3.35",


    "action":{
        "default_popup": "index.html"
    },

    "background": {
        "service_worker": "background.js"
    },


    "permissions":
     ["contextMenus",
       "tabs",
       "activeTab",
       "storage"]



}